<div class="max-w-3xl mx-auto p-6 bg-white shadow rounded-lg">
  <h2 class="text-3xl font-bold mb-4 text-gray-800"><%= event.title %></h2>

  <p class="mb-2"><span class="font-semibold">Description:</span> <%= event.description %></p>
  <p class="mb-2"><span class="font-semibold">Start:</span> <%= event.startAt.toLocaleString() %></p>
  <p class="mb-4"><span class="font-semibold">End:</span> <%= event.endAt.toLocaleString() %></p>

  <% if(event.image){ %>
    <img src="/uploads/images/<%= event.image %>" alt="Event Image" class="w-full rounded-lg mb-4 shadow">
  <% } %>

  <% if(event.video){ %>
    <video controls class="w-full rounded-lg mb-4 shadow">
      <source src="/uploads/videos/<%= event.video %>" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  <% } %>
</div>

