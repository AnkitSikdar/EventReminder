<h2 class="text-2xl font-bold mb-6 text-gray-800">Login</h2>

<form method="POST" action="/login" class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <div class="mb-4">
    <label class="block text-gray-700 font-medium mb-2" for="email">Email</label>
    <input 
      type="email" 
      name="email" 
      id="email"
      required 
      class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
    >
  </div>

  <div class="mb-4">
    <label class="block text-gray-700 font-medium mb-2" for="password">Password</label>
    <input 
      type="password" 
      name="password" 
      id="password"
      required 
      class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
    >
  </div>

  <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg">
    Login
  </button>

  <p class="mt-4 text-gray-600 text-sm text-center">
    Don't have an account? 
    <a href="/register" class="text-blue-600 hover:underline">Register</a>
  </p>
</form>
